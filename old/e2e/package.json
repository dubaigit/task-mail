{
  "name": "apple-mcp-e2e-tests",
  "version": "1.0.0",
  "description": "Comprehensive E2E testing suite for 2025 testing strategy with UX safety validation",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ux-safety": "playwright test --project=ux-safety-validation",
    "test:accessibility": "playwright test --project=accessibility-audit",
    "test:performance": "playwright test --project=performance-validation",
    "test:visual": "playwright test --project=visual-regression",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:cross-browser": "playwright test --project=chromium-desktop --project=firefox-desktop --project=webkit-desktop",
    "report": "playwright show-report",
    "codegen": "playwright codegen localhost:3000",
    "install:deps": "playwright install",
    "install:deps-with-deps": "playwright install --with-deps"
  },
  "dependencies": {
    "@playwright/test": "^1.44.0",
    "@axe-core/playwright": "^4.8.5",
    "lighthouse": "^11.7.1",
    "axe-core": "^4.8.4"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "@types/node": "^20.12.12"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "accessibility",
    "performance",
    "ux-safety",
    "wcag",
    "core-web-vitals",
    "2025-standards"
  ],
  "author": "T504 Testing Strategy",
  "license": "MIT"
}