# OpenAI API Configuration
# OPENAI_API_KEY= # Removed for security

# Model Configuration
GPT5_NANO_MODEL=gpt-5-nano
GPT5_MINI_MODEL=gpt-5-mini
GPT4O_MINI_MODEL=gpt-4o-mini
GPT4O_MODEL=gpt-4o

# API Rate Limits
MAX_REQUESTS_PER_MINUTE=60
MAX_TOKENS_PER_MINUTE=150000

# Cost Tracking
MONTHLY_BUDGET_USD=100
ALERT_AT_PERCENTAGE=80

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Security
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT=100
SESSION_TIMEOUT_MINUTES=30

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/apple_mcp

# Email Sync
APPLE_MAIL_DB_PATH=~/Library/Mail/V10/MailData/Envelope Index
SYNC_BATCH_SIZE=100
SYNC_INTERVAL_SECONDS=300
