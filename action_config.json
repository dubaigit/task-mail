{
  "approval_required_actions": [
    "CREATE_TASK",
    "SCHEDULE_MEETING",
    "DELEGATE_TASK",
    "FORWARD_EMAIL",
    "UPLOAD_FILE"
  ],
  "auto_approve_threshold": 0.9,
  "max_concurrent_actions": 5,
  "retry_delays": [1, 5, 15],
  "external_integrations": {
    "jira": {
      "enabled": false,
      "url": "https://your-company.atlassian.net",
      "token": "YOUR_JIRA_API_TOKEN",
      "project_key": "PROJ"
    },
    "asana": {
      "enabled": false,
      "token": "YOUR_ASANA_ACCESS_TOKEN",
      "workspace_id": "YOUR_WORKSPACE_ID"
    },
    "calendar": {
      "enabled": true,
      "default_calendar": "Work"
    },
    "file_upload": {
      "enabled": true,
      "max_size_mb": 50,
      "allowed_types": [".pdf", ".doc", ".docx", ".txt", ".png", ".jpg", ".jpeg"],
      "cloud_provider": "icloud"
    },
    "slack": {
      "enabled": false,
      "webhook_url": "YOUR_SLACK_WEBHOOK_URL",
      "token": "YOUR_SLACK_BOT_TOKEN"
    }
  },
  "security": {
    "require_approval_for_external": true,
    "allowed_domains": [
      "company.com",
      "yourcompany.com"
    ],
    "restricted_actions": [
      "ESCALATE"
    ],
    "max_forward_recipients": 5,
    "require_encryption_for_sensitive": true
  },
  "notifications": {
    "email_notifications": true,
    "slack_notifications": false,
    "approval_timeout_hours": 24,
    "escalation_timeout_hours": 48
  },
  "ai_settings": {
    "confidence_threshold_auto_execute": 0.95,
    "require_human_review_below": 0.7,
    "enable_learning_from_feedback": true
  },
  "rate_limits": {
    "actions_per_minute": 10,
    "emails_per_hour": 50,
    "api_calls_per_hour": 100
  },
  "logging": {
    "level": "INFO",
    "retain_days": 90,
    "audit_all_actions": true,
    "sensitive_data_masking": true
  }
}