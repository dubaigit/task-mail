{
  "name": "email-intelligence-dashboard",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.2.0",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.5",
    "lucide-react": "^0.294.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^4.4.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "GENERATE_SOURCEMAP=false react-scripts build",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "build:production": "npm run build && npm run performance:audit",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "performance:audit": "lighthouse http://localhost:3000 --output-path=./lighthouse-reports/audit-$(date +%Y%m%d-%H%M%S).html --output=html",
    "performance:budget": "lighthouse http://localhost:3000 --budget-path=./budget.json --output=json",
    "performance:ci": "lhci autorun",
    "performance:serve": "npx serve -s build -l 3000",
    "performance:full-audit": "npm run build && npm run performance:serve & sleep 5 && npm run performance:audit && kill $!"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:8001",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@lhci/cli": "^0.13.0",
    "jest-environment-jsdom": "^30.0.5",
    "lighthouse": "^11.4.0",
    "serve": "^14.2.1",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
