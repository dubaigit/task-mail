{
  "gpt5_settings": {
    "user_name": "Abdullah",
    "signature": "Regards Abdullah",
    "greeting_prefix": "D",
    "tone_preference": "professional_warm",
    "response_style": "concise_actionable"
  },
  "ai_models": {
    "classifier_model": "gpt-5-nano-2025-08-07",
    "draft_model": "gpt-5-mini-2025-08-07",
    "fallback_enabled": true
  },
  "processing_settings": {
    "batch_size": 10,
    "auto_process": true,
    "draft_auto_generate": true,
    "cache_enabled": true,
    "concurrent_limit": 5,
    "timeout_seconds": 30
  },
  "classification_thresholds": {
    "high_confidence": 0.85,
    "medium_confidence": 0.65,
    "low_confidence": 0.45,
    "urgent_keywords": ["urgent", "asap", "critical", "emergency", "immediate"],
    "approval_keywords": ["approve", "approval", "sign-off", "authorize", "budget"]
  },
  "draft_generation": {
    "max_length": 500,
    "include_context": true,
    "personalize_greeting": true,
    "auto_include_deadlines": true,
    "review_required_for": ["APPROVAL", "URGENT", "DELEGATE"]
  },
  "database_settings": {
    "database_path": "gpt5_email_analysis.db",
    "backup_enabled": true,
    "backup_interval_hours": 24,
    "retention_days": 90
  },
  "performance_settings": {
    "cache_ttl_seconds": 3600,
    "max_cache_size_mb": 100,
    "performance_monitoring": true,
    "metrics_collection": true
  },
  "learning_settings": {
    "learn_from_corrections": true,
    "adaptation_rate": 0.1,
    "min_confidence_for_learning": 0.6,
    "save_learning_log": true
  },
  "integration_settings": {
    "apple_mail_enabled": true,
    "real_time_processing": true,
    "background_processing": true,
    "webhook_notifications": false
  },
  "logging_settings": {
    "logging_level": "INFO",
    "log_file": "gpt5_processor.log",
    "max_log_size_mb": 50,
    "log_rotation_count": 5
  },
  "security_settings": {
    "encrypt_stored_data": false,
    "sanitize_personal_info": true,
    "audit_trail": true,
    "api_rate_limiting": true
  }
}