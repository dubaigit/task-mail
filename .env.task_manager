# Task-First Email Manager Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/email_tasks
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=30
DB_POOL_RECYCLE=3600

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Background Worker Configuration
POLL_INTERVAL=300
BATCH_SIZE=200

# Apple Mail Database Path (auto-detected if not set)
# APPLE_MAIL_DB=/Users/yourusername/Library/Mail/V10/MailData/Envelope\ Index

# Server Configuration
PORT=8000
LOG_LEVEL=info

# CORS Origins
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:8080"]

# Redis Configuration (optional for advanced features)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Development flags
DEBUG=true
ENVIRONMENT=development